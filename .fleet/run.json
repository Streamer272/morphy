{
    "configurations": [
        {
            "name": "Build morphy",
            "type": "gradle",
            "tasks": [
                ":classes"
            ],
            "initScripts": {
                "flmapper": "ext.mapPath = { path -> null }",
                "Build morphy": "System.setProperty('org.gradle.java.compile-classpath-packaging', 'true')\n"
            }
        },
        {
            "name": "MainKt",
            "type": "jps-run",
            "dependsOn": [
                "Build morphy"
            ],
            "mainClass": "MainKt",
            "module": "morphy.main",
            "options": [
                "-Dfile.encoding=UTF-8"
            ],
            "args": ["run", "test.morphy"],
        }
    ]
}
